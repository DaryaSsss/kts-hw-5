{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@img/*": ["src/img/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "include": ["src/**/*", "./declaration.d.ts"], // какие файлы включены в проверку
  "exclude": ["node_modules"] // какие файлы исключены
}
